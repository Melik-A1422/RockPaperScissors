import random
print("Welcome, this is Rock-paper-scissors")
PlayerOne_choice=int(input("Choose from\n1.Rock\n2.paper\n3.scissors\nAnswer?:"))
if PlayerOne_choice==1:
    print("You chose Rock!")
elif PlayerOne_choice==2:
    print("You chose paper!")
elif PlayerOne_choice==3:
    print("You chose scissors!")
Computer_choice=random.randint(0, 2) 
elif Computer_choice==1:
    print("Comp Opponent chose Rock!")
elif Computer_choice==2:
    print("Comp Opponent chose paper!")
elif Computer_choice==3:
    print("Comp Opponent chose scissors!")



if Computer_choice==1 and PlayerOne_choice==1:
    print("IT'S A DRAW!!")
elif Computer_choice==1 and PlayerOne_choice==2:
    print("PlayerOne WINS!!")
elif Computer_choice==1 and PlayerOne_choice==3:
    print("Computer WINS!!")
elif Computer_choice==2 and PlayerOne_choice==1:
    print("Computer WINS!!")
elif Computer_choice==2 and PlayerOne_choice==2:
    print("IT'S A DRAW!!") 
elif Computer_choice==2 and PlayerOne_choice==3:
    print("Computer WINS!!")
elif Computer_choice==3 and PlayerOne_choice==1:
    print("PlayerOne WINS!!")
elif Computer_choice==3 and PlayerOne_choice==2:
    print("Computer WINS!!")
elif Computer_choice==3 and PlayerOne_choice==3:
    print("IT'S A DRAW!!")
